        tagColor = '#83ff83'; // Green for accepted
        ratingColor = '#83ff83';
        statusColor = '#83ff83';
    } else if (locals.timeLimitExceededProblems.includes(problem.name)) {
        tagColor = 'orange'; // Orange for Time Limit Exceeded
